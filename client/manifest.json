{
  "manifest_version": 2,
  "name": "Quora Explorer",
  "version": "1.0",

  "description": "Adds helpful popover previews to related questions on Quora.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "*://*.quora.com/*",
    "http://localhost/*",
    "webRequest"
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Quora Explorer"
  },

  "content_scripts": [
    {
      "matches": ["*://*.quora.com/*"],
      "js": [
        "models/RelatedQuestion.js",
        "util/ScrapeService.js",
        "util/PopoverManager.js",
        "util/PopoverBuilder.js",
        "util/HTMLFactory.js",
        "explorer.js"
      ],
      "css": ["popover.css"]
    }
  ],

  "web_accessible_resources": [
    "assets/popover-bg.png"
  ]

}